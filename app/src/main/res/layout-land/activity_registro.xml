<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8cd3ff"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:id="@+id/scrollView2"
        android:layout_weight="0.92">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/correo"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:layout_marginTop="20dp"
                android:textColor="#ff000000"
                android:layout_marginBottom="0dp"
                android:textSize="20dp" />

            <TextView android:id="@+id/correoError"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Correo inválido"
                android:layout_weight="1"
                android:visibility="invisible" />

            <EditText android:id="@+id/pass"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Contraseña"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView android:id="@+id/passError"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Contraseña inválida"
                android:layout_weight="1"
                android:visibility="invisible" />

            <EditText android:id="@+id/nombre"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView android:id="@+id/nombreError"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario inválido"
                android:layout_weight="1"
                android:visibility="invisible" />

            <EditText android:id="@+id/nip"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Nip"
                android:layout_weight="1"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView android:id="@+id/nipError"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:hint="Nip inválido"
                android:layout_weight="1"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp">

        <TextView android:id="@+id/usuarioError"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:hint="El correo  ya existe"
            android:layout_weight="1"
            android:textColor="#fffbfffb"
            android:visibility="invisible"
            android:layout_gravity="right|top" />

        <Button android:id="@+id/confirmar"
            android:layout_marginTop="25dp"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="CONFIRMAR"
            android:layout_gravity="right|center_vertical"
            android:textColor="#03A9F4"
            android:background="#ffffff"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="35dp" />
    </FrameLayout>
</LinearLayout>

</RelativeLayout>
