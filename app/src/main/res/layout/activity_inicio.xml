<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B3E5FC">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DIIScover"
            android:id="@+id/Nemesis"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textSize="80dp"
            android:textColor="#03A9F4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/correo"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Correo"
                android:singleLine="false"
                android:phoneNumber="false"
                android:textColor="#ffffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/errorNick"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario no encontrado"
                android:textColorHint="#fffbfffb"
                android:layout_marginBottom="0dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText android:id="@+id/pass"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Contraseña"
                android:textAllCaps="true"
                android:textColor="#ffffffff"
                android:textIsSelectable="false"
                android:inputType="textPassword"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/errorPass"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Contraseña inválida"
                android:textColorHint="#fffbfffb"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="260dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Button android:id="@+id/identificar"
                android:text="INICIAR SESIÓN"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:background="#B3E5FC"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#03A9F4" />

            <Button android:id="@+id/registrar"
                android:text="REGISTRARSE"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"
                android:background="#B3E5FC"
                android:textColor="#03A9F4" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

