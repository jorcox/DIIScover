<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#B3E5FC"
    tools:context="nemesis.diiscover.AsignaturaPantalla">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">
         <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Descripción"
            android:id="@+id/textView"
            android:padding="10dp"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewDescripcionAsignatura"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:height="100dp"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:textColor="#757575" />

             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="#757575"

                 android:layout_marginLeft="10dp"
                 android:layout_below="@+id/textViewAulaAsignatura" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Criterios de evaluación"
            android:id="@+id/textViewcorreoProfesor"
            android:padding="10dp"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:layout_below="@+id/textViewDescripcionAsignatura"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewCriteriosAsignatura"
            android:padding="10dp"
            android:height="100dp"
            android:textSize="15dp"
            android:layout_below="@+id/textViewcorreoProfesor"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textViewDescripcionAsignatura"
            android:textColor="#757575" />
             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="#757575"
                 android:layout_marginLeft="10dp"
                 android:layout_below="@+id/textViewCreditosAsignatura" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aula"
            android:id="@+id/textView5"
            android:padding="10dp"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="18dp"
            android:layout_below="@+id/textViewCriteriosAsignatura"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Créditos"
            android:id="@+id/textView6"
            android:padding="10dp"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="18dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />
             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="#757575"
                 android:layout_marginLeft="10dp"
                 android:layout_below="@+id/textViewAulaExamenAsignatura" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aula donde se imparte"
            android:id="@+id/textViewAulaAsignatura"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:textColor="#757575"
            android:layout_above="@+id/textView6"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="6"
            android:id="@+id/textViewCreditosAsignatura"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:textColor="#757575"
            android:layout_below="@+id/textViewAulaAsignatura"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aula donde se examina"
            android:id="@+id/textViewAulaExamenAsignatura"
                 android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="15dp"
            android:textColor="#757575"
            android:layout_below="@+id/textView6"
            android:layout_alignParentEnd="true"
                 android:paddingBottom="10dp"
                 android:paddingTop="10dp"
                 android:paddingLeft="10dp" />
             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="#757575"
                 android:layout_marginLeft="10dp"
                 android:layout_below="@+id/textViewFechaExamenAsignatura" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text="Aula de examen"
                 android:id="@+id/textView9"
                 android:padding="10dp"
                 android:textAlignment="center"
                 android:textIsSelectable="false"
                 android:textSize="18dp"
                 android:layout_below="@+id/textView11"
                 android:layout_alignParentStart="true" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text="Fecha de examen"
                 android:id="@+id/textView11"
                 android:padding="10dp"
                 android:textAlignment="center"
                 android:textIsSelectable="false"
                 android:textSize="18dp"
                 android:layout_alignTop="@+id/textViewAulaExamenAsignatura"
                 android:layout_alignParentStart="true" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text="22-01-1994"
                 android:id="@+id/textViewFechaExamenAsignatura"
                 android:textAlignment="center"
                 android:textIsSelectable="false"
                 android:textSize="15dp"
                 android:textColor="#757575"
                 android:layout_below="@+id/textView11"
                 android:layout_alignParentEnd="true"
                 android:paddingBottom="10dp"
                 android:paddingLeft="10dp"
                 android:paddingTop="10dp" />

         </RelativeLayout>

    </ScrollView>




</RelativeLayout>


