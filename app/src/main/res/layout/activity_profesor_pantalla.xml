<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nemesis.diiscover.ProfesorPantalla"
    android:background="#ffffff">

    <ImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:src="@drawable/profesor2"
        android:id="@+id/imagenProfesor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#757575"

        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewDespachoProfesor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TutorÃ­as"
        android:id="@+id/textViewcorreoProfesor"
        android:padding="10dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_below="@+id/imagenProfesor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Asignaturas"
        android:id="@+id/textView12"
        android:padding="10dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/textViewtutoriasProfesor"
        android:padding="10dp"
        android:height="100dp"
        android:textSize="15dp"
        android:layout_below="@+id/textViewcorreoProfesor"
        android:layout_alignParentStart="true"
        android:textColor="#757575"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#757575"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewCorreoProfesor"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Despacho"
        android:id="@+id/textView5"
        android:padding="10dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:layout_below="@+id/textViewtutoriasProfesor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correo"
        android:id="@+id/textView6"
        android:padding="10dp"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Despacho no definido"
        android:id="@+id/textViewDespachoProfesor"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="#757575"
        android:layout_above="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correo no definido"
        android:id="@+id/textViewCorreoProfesor"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textColor="#757575"
        android:layout_below="@+id/textViewDespachoProfesor"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <Button android:id="@+id/confirmar"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:text="ENVIAR CORREO"
        android:layout_gravity="right|center_vertical"
        android:textColor="#ffffff"
        android:background="#03A9F4"
        android:singleLine="false"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="irAEnviarCorreo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:id="@+id/textViewAsignaturasProfesor"
        android:padding="10dp"
        android:height="100dp"
        android:textSize="15dp"
        android:textColor="#757575"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/view"
        android:layout_alignStart="@+id/view" />
</RelativeLayout>
