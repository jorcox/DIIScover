<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="4dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="1dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#FFFFFF"
        android:shadowColor="#ae010001">

        <ImageView
            android:id="@+id/ImageViewCarreraImagen"
            android:layout_width="fill_parent"
            android:layout_height="155dp"
            android:contentDescription="@string/sample_text_image"
            android:layout_gravity="top"
            android:src="@drawable/imgs_acceso_universidad"
            android:adjustViewBounds="false"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textViewCarreraNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start"
            android:layout_marginTop="120dp"
            android:background="#c2000000"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:text=""
            android:paddingBottom="5dp"
            android:paddingTop="4dp"
            android:textAlignment="center"
            android:paddingLeft="11dp"
            android:paddingRight="4dp" />



        <TextView
            android:id="@+id/textViewCarreraID"
            android:layout_width="0px"
            android:layout_height="0px"
            android:gravity="center"
            android:layout_marginTop="125dp"
            android:text="" />
    </android.support.v7.widget.CardView>

</LinearLayout>