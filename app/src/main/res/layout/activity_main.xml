<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"   android:background="#ffffff"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LABORATORIOS"
        android:id="@+id/laboratorios"
        android:drawableTop="@drawable/computer4"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#03A9F4"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:onClick="irALaboratorios" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASIGNATURAS"
        android:id="@+id/Asignaturas"
        android:drawableTop="@drawable/books4"
        style="?android:attr/borderlessButtonStyle"

        android:textColor="#03A9F4"
        android:textSize="20dp"
        android:onClick="irAAsignaturas"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/profesores"
        android:onClick="irAProfesores"

        android:textColor="#03A9F4"
        android:textSize="20dp"
        android:drawableTop="@drawable/profesor4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginRight="10dp"
        android:text="PROFESORES"
        android:layout_below="@+id/laboratorios"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#03A9F4"
        android:textSize="20dp"
        android:id="@+id/ayudar"
        android:onClick="irAAyudar"
        android:drawableTop="@drawable/mano4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginRight="20dp"
        android:text="AYÃšDANOS"
        android:layout_alignTop="@+id/profesores"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
